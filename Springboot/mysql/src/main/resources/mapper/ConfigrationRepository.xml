<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//MYBATIS.org//DTD Mapper 3.0//EN" "http://MYBATIS.org/dtd/MYBATIS-3-mapper.dtd" >
<mapper namespace="com.example.mysql.repository.ConfigrationRepository" >
    <!-- ResultMap -->
    <resultMap id="ConfigrationResultMap" type="com.example.mysql.model.Configration" >
        <result column="TABLE_NAME" property= "tableName" jdbcType= "VARCHAR"/>
        <result column="BASE_URL" property= "baseUrl" jdbcType= "VARCHAR"/>
        <result column="IMG_URL" property= "imgUrl" jdbcType= "VARCHAR"/>
        <result column="LIST_URL" property= "listUrl" jdbcType= "VARCHAR"/>
        <result column="WAIT_TIME" property= "waitTime" jdbcType= "INTEGER"/>
        <result column="REPLACE_KEYWORD" property= "replaceKeyword" jdbcType= "VARCHAR"/>
        <result column="LOCAL_DIRECTORY" property= "localDirectory" jdbcType= "VARCHAR"/>
    </resultMap>

    <!-- 全字段检索 -->
    <sql id="select_column_list">
        TABLE_NAME
        , BASE_URL
        , IMG_URL
        , LIST_URL
        , WAIT_TIME
        , REPLACE_KEYWORD
        , LOCAL_DIRECTORY
    </sql>

    <!-- 插入数据字段 -->
    <sql id="insert_column_list">
        TABLE_NAME
        , BASE_URL
        , IMG_URL
        , LIST_URL
        , WAIT_TIME
        , REPLACE_KEYWORD
        , LOCAL_DIRECTORY
    </sql>

    <!-- 通过ID查找唯一一条记录 -->
    <select id="selectOneById" resultMap="ConfigrationResultMap">
        SELECT
            <include refid="select_column_list"></include>
        FROM CONFIGRATION
        WHERE
            ID = #{id}
    </select>

    <!-- 根据条件取得件数 -->
    <select id="getCountByDto" parameterType="com.example.mysql.dto.ConfigrationDto" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM CONFIGRATION
        <where>
            1 = 1

            <if test="condition!=null and condition!=''">
                ${condition}
            </if>
        </where>
    </select>

    <!-- 根据条件取得一览 -->
    <select id="selectByDto" parameterType="com.example.mysql.dto.ConfigrationDto" resultMap="ConfigrationResultMap">
        SELECT
            <include refid="select_column_list"></include>
        FROM CONFIGRATION
        <where>
            1 = 1

            <if test="condition!=null and condition!=''">
                ${condition}
            </if>
        </where>
        <if test="orderBy!=null">
            ORDER BY ${orderBy}
        </if>
            LIMIT ${startRow} , ${pageSize}
    </select>

    <!-- 新增一条数据 -->
    <insert id="insert" parameterType="com.example.mysql.model.Configration" >
        INSERT INTO CONFIGRATION (
        <!-- <trim prefix='(' suffix=')' suffixOverrides=','> -->
        <include refid="insert_column_list"></include>
        ) VALUES (
        #{tableName}
        , #{baseUrl}
        , #{imgUrl}
        , #{listUrl}
        , #{waitTime}
        , #{replaceKeyword}
        , #{localDirectory}
        )
    </insert>

    <!-- 删除数据 -->
    <delete id="delete">
        DELETE FROM CONFIGRATION WHERE ID = #{id}
    </delete>

    <!-- 更新数据 -->
    <update id="update" parameterType="com.example.mysql.model.Configration" >
        UPDATE CONFIGRATION
        <set>

        </set>
        WHERE
            ID = #{id}
    </update>

    <!-- 业务主键查找唯一值 -->
    <select id="selectOneByUniqueKey" resultMap="ConfigrationResultMap">
        SELECT
            <include refid="select_column_list"></include>
        FROM CONFIGRATION
        <where>
            AND TABLE_NAME = #{tableName}

        </where>
    </select>

    <!-- 自定义查找 -->
    <select id="customQuary" parameterType="com.example.mysql.dto.ConfigrationDto" resultType="com.example.mysql.model.Configration">
        SELECT
             ${selectQuary}
        FROM CONFIGRATION
        <if test="joinPart!=null">
            ${joinPart}
        </if>
        <where>
            1 = 1
            <if test="condition!=null and condition!=''">
             AND ${condition}
            </if>
        </where>
        <if test="groupBy!=null and groupBy!=''">
            GROUP BY ${groupBy}
        </if>
        <if test="having!=null and having!=''">
            HAVING ${having}
        </if>
        <if test="orderBy!=null and orderBy!=''">
            ORDER BY ${orderBy}
        </if>
    </select>
</mapper>
